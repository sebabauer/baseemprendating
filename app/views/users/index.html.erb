<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Maiden name</th>
      <th>Formatted name</th>
      <th>Phonetic first name</th>
      <th>Phonetic last name</th>
      <th>Formatted phonetic name</th>
      <th>Headline</th>
      <th>Location</th>
      <th>Industry</th>
      <th>Current share</th>
      <th>Num connections</th>
      <th>Num connections capped</th>
      <th>Sumary</th>
      <th>Specialties</th>
      <th>Positions</th>
      <th>Picture url</th>
      <th>Picture url original</th>
      <th>Site standard profile request</th>
      <th>Api standard profile request</th>
      <th>Public profile url</th>
      <th>Email address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.maiden_name %></td>
        <td><%= user.formatted_name %></td>
        <td><%= user.phonetic_first_name %></td>
        <td><%= user.phonetic_last_name %></td>
        <td><%= user.formatted_phonetic_name %></td>
        <td><%= user.headline %></td>
        <td><%= user.location %></td>
        <td><%= user.industry %></td>
        <td><%= user.current_share %></td>
        <td><%= user.num_connections %></td>
        <td><%= user.num_connections_capped %></td>
        <td><%= user.sumary %></td>
        <td><%= user.specialties %></td>
        <td><%= user.positions %></td>
        <td><%= user.picture_url %></td>
        <td><%= user.picture_url_original %></td>
        <td><%= user.site_standard_profile_request %></td>
        <td><%= user.api_standard_profile_request %></td>
        <td><%= user.public_profile_url %></td>
        <td><%= user.email_address %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

